<div class='back'>
    <%= link_to 'Back', root_path, :class => 'btn btn-primary' %>
</div>
<div class="page-header">
  <h2>Hello, <%= @practitioner_name %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Patients</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient[:name], fhir_patient_path(patient[:patient_id]) + "?practitioner=" + params[:practitioner] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
